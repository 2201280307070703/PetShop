@model ProductAllViewModel


<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageUrl" alt="Product Image">
        <div class="card-body text-center">
            <h4>@Model.Name</h4>
            <h6>Description: <b>@Model.Description</b></h6>
            <h6>
                Price for this product is:
                <b>@String.Format("{0:f2}", Model.Price) BGN</b>
            </h6>
            <br />
            <a asp-controller="Product" asp-action="CartRemove" asp-route-id="@Model.Id"
               class="btn btn-success">Buy</a>
            <form class="input-group-sm" asp-controller="Product" asp-action="CartRemove" asp-route-id="@Model.Id">
                <input type="submit" value="Remove" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
        </div>
    </div>
</div>
